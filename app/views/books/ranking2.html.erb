<h2>コメント数ランキング</h2>
<div class="books-container">
  <% @comment_rank.each do |t| %>
    <div class="books">
      <div class="left-container">
        <%= image_tag t.image_url, size: "250x200" if t.image? %>
      </div>
      <div class="right-container">
        <div class="right-child title"><%= t.name %></div>
        <div class="right-child content"><%= t.body %></div>
        <div class="right-child detail">
          <%= t.user.name %>
          <%= t.created_at %>
          <%= link_to "詳細へ", book_path(t.id) %>
        </div>
        <% if user_signed_in? %>
          <% if current_user.already_liked?(t) %>
            <%= link_to book_like_path(id: t.id, book_id: t.id), method: :delete do %>
              <i class="fas fa-heart"></i><%= t.likes.count %>
              <i class="far fa-comment"></i><%= t.comments.count%>
            <% end %>
          <% else %>
            <%= link_to book_likes_path(id: t.id, book_id: t.id), method: :post do %>
              <i class="far fa-heart"></i><%= t.likes.count %>
              <i class="far fa-comment"></i><%= t.comments.count%>
            <% end %>
          <% end %>
        <% else %>
          <i class="far fa-heart"></i><%= t.likes.count %>
          <i class="far fa-comment"></i><%= t.comments.count%>
        <% end %>
      </div>
    </div>
  <% end %>

</div>