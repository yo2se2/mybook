<%= form_for @book do |f| %>
  <div class="title">
        <%= f.label :題目 %>
        <%= f.text_field :name, :size => 50 %>
      </div>
      <div class="field">
        <%= f.label :投稿内容 %>
        <%= f.text_area :body, :size => 70 %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
  <%= f.submit "編集する" %>
<% end %>